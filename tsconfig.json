{
    "compilerOptions": {
      // ソースマップを有効化
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "target": "ES6",
      "lib": ["es2021"],
      // TSのモジュールはES Modulesとして出力
      "module": "esnext",
      //"allowImportingTsExtensions": true,
      //"noEmit": true,
      "moduleResolution": "node",
      // 厳密モードとして設定
      "strict": true,
      "outDir":"./js"
    }
  }